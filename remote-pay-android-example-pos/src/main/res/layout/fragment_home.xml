<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fragment_home">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:layout_marginBottom="10sp"
      android:clickable="true"
      android:onClick="showRegister"
      android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_marginEnd="@dimen/home_button_margin"
        android:clickable="true"
        android:onClick="showRegister"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/register_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:text="@string/new_order"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/register_text"
          android:gravity="center_horizontal"
          android:padding="15dp"
          android:src="@drawable/ic_register"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PreAuthButton"
        android:clickable="true"
        android:onClick="startPreAuth"
        android:layout_marginEnd="@dimen/home_button_margin"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/preauth_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/new_tab_preauth"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/preauth_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_new_tab"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OrdersButton"
        android:clickable="true"
        android:onClick="showOrders"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/orders_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/view_orders"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/orders_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_orders"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginBottom="10sp"
      android:orientation="horizontal"
      android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CardsButton"
        android:clickable="true"
        android:onClick="showCards"
        android:layout_marginEnd="@dimen/home_button_margin"
        android:gravity="center_horizontal"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/card_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/customers_vault_card"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_text"
          android:gravity="center_horizontal"
          android:padding="10dp"
          android:src="@drawable/ic_customers"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RefundButton"
        android:clickable="true"
        android:onClick="showRefunds"
        android:layout_marginEnd="@dimen/home_button_margin"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/refund_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/refund"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/refund_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_refunds"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TransactionButton"
        android:onClick="showTransactions"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/transaction_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/transactions"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/transaction_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_transactions"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginBottom="10sp"
      android:orientation="horizontal"
      android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CustomActivityButton"
        android:clickable="true"
        android:onClick="showCustomActivities"
        android:layout_marginEnd="@dimen/home_button_margin"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/custom_activity_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/custom_activities"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/custom_activity_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_custom_activities"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeviceButton"
        android:clickable="true"
        android:layout_marginEnd="@dimen/home_button_margin"
        android:onClick="showDevice"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/device_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/device"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/device_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_device"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecoveryButton"
        android:clickable="true"
        android:onClick="showRecoveryOptions"
        android:background="@drawable/button_border_padding"> 
      <TextView
          android:id="@+id/recovery_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:text="@string/recovery_options"
          android:textSize="18sp"/>
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/recovery_text"
          android:gravity="center_horizontal"
          android:padding="20dp"
          android:src="@drawable/ic_recovery"
          android:scaleType="fitCenter"/>
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>