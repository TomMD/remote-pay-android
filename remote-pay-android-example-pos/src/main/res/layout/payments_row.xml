<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
  <ImageView
      android:id="@+id/OrderTransactionImage"
      android:layout_width="25dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="10dp"/>

  <LinearLayout
      android:layout_width="75dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginEnd="20dp">
    <TextView
        android:id="@+id/OrderTransactionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/OrderTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/OrderTransactionTenderImage"
          android:layout_width="40dp"
          android:layout_height="wrap_content"
          android:src="@drawable/tender_default"
          android:scaleType="fitCenter"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:orientation="vertical">
        <TextView
            android:id="@+id/OrderTransactionTender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/OrderTransactionCardDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginEnd="20dp"
      android:gravity="right">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PaymentsRowTotalColumn"
        android:layout_alignParentRight="true"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PaymentsRowStatusColumn"/>
  </LinearLayout>
</LinearLayout>